<!--
  Page to display the result of the search for "user3"
  User3's card is hardcoded here in this HTML file
  In phase2, the contents of this serach page will depend on the query and will
  be retrieved from DataBase.
-->

<!DOCTYPE html>
<html lang="en">

 <head>
 	<meta charset="utf-8">
    <title>Your Event Feed</title>
    <link rel="stylesheet" type="text/css" href="/stylesheets/eventFeed.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/headerBar.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/searchResult.css">
    <link href="https://fonts.googleapis.com/css?family=Lato&display=swap" rel="stylesheet">

 </head>

 <body>

 	
    {{#if isEventOrganizer}}
      {{> organizerHeader}}
    {{else}}
      {{> normalHeader}}
    {{/if}}


  <!-- Hardcoded search result. To be changed to get data from database in phase2-->
 	<div id="searchResultList">
         <p> {{count}} search result found for "{{query}}"</p>

        {{#each users}}
          <div class="card">
            <div id="profilePicture">
               <a href="/users/dashboard/{{this._id}}"> <img id="profilePic" src="data:image/jpg;base64, {{this.profilePic.data}}" /> </a>
            </div>
             <p class="infoText"> Username: {{this.username}} </p>
             <p class="infoText"class="infoText">Name: {{this.firstname}} {{this.lastname}}</p>
             <p class="infoText">Institution: {{this.currentInstitution}} </p>
             <p class="infoText">Year of Study: {{this.yearOfStudy}}</p>
             <hr>
            {{#if this.sent}}

            {{else}}
              <input type="button" id='{{this._id}}' class="green_button" value="Send Request"/>
            {{/if}}
             


          </div>
        {{/each}}   
        

 	</div>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="/javascripts/searchResult.js"></script>
 </body>
</html>
